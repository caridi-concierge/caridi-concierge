# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown: don't strip trailing spaces (sometimes intentional in MD)
[*.md]
trim_trailing_whitespace = false

# YAML/JSON: 2-space indent
[*.{yml,yaml,json}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# TypeScript & JavaScript: 2-space indent
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# CSS/PostCSS/Tailwind: 2-space indent
[*.{css,pcss}]
indent_size = 2

# HTML: 2-space indent
[*.html]
indent_size = 2